<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"
        android:weightSum="1">

        <Spinner
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner_field_search"
            android:layout_weight="0.2" />

        <Spinner
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner_school_search"
            android:layout_weight="0.5" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/bt_searchtitle_search"
            android:src="@drawable/abc_ic_search_api_mtrl_alpha"
            android:layout_weight="0.3" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.6">

        <GridView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/gridView_title_search"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"
        android:weightSum="1" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/abc_ic_menu_paste_mtrl_am_alpha"
            android:layout_weight="0.20"
            android:id="@+id/bt_calendar_search" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/bt_search_search"
            android:layout_weight="0.2"
            android:src="@drawable/abc_ic_search_api_mtrl_alpha" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/bt_favorite_search"
            android:src="@drawable/abc_btn_rating_star_on_mtrl_alpha"
            android:layout_weight="0.2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/bt_response_search"
            android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha"
            android:layout_weight="0.2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/bt_setting_search"
            android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
            android:layout_weight="0.2" />
    </LinearLayout>

</LinearLayout>